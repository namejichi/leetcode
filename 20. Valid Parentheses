class Solution {
public:
    bool isValid(string s) {
        stack<char> stk;
        for (int i = 0; i < s.size(); i++) {
            if (s[i] == '(' || s[i] == '[' || s[i] == '{') {
                stk.push(s[i]);
            }
            else if (s[i] == ')') {
                if (stk.empty()) {
                    return false;
                }
                else {
                    if (stk.top() != '(') {
                        return false;
                    }
                    stk.pop();
                }
            }
            else if (s[i] == ']') {
                if (stk.empty()) {
                    return false;
                }
                else {
                    if (stk.top() != '[') {
                        return false;
                    }
                    stk.pop();
                }
            }
            else {
                if (stk.empty()) {
                    return false;
                }
                else {
                    if (stk.top() != '{') {
                        return false;
                    }
                    stk.pop();
                }
            }
        }
        return stk.empty();  //关键！！比如只有左括号！！
    }
};
